{
  "name": "suptia-kiro",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "cd apps/web && npm run dev",
    "build": "cd apps/web && npm run build",
    "start": "cd apps/web && npm run start",
    "lint": "cd apps/web && npm run lint",
    "format": "cd apps/web && npm run format",
    "format:check": "cd apps/web && npm run format:check",
    "test": "cd apps/web && npm run test",
    "test:watch": "cd apps/web && npm run test:watch",
    "typecheck": "cd apps/web && npm run typecheck",
    "type-check": "cd apps/web && npm run typecheck",
    "env:check": "node scripts/check-env-sync.mjs",
    "env:check:ci": "CI=true node scripts/check-env-sync.mjs",
    "preview:verify": "node scripts/verify-preview-env.mjs",
    "preview:url": "node scripts/get-preview-url.mjs",
    "preview:workflow": "node scripts/test-preview-workflow.mjs",
    "deploy:monitor": "node scripts/monitor-production-deployment.mjs",
    "deploy:rollback": "node scripts/rollback-production.mjs",
    "deploy:notify": "node scripts/notify-deployment.mjs",
    "deploy:test": "node scripts/test-production-deployment.mjs",
    "test:integration": "node scripts/test-integration-e2e.mjs",
    "test:e2e": "node scripts/test-integration-e2e.mjs",
    "test:workflow": "npm run preview:test && npm run deploy:test && npm run test:integration",
    "sitemap": "next-sitemap",
    "precommit": "npm run format && npm run lint && npm run test && npm run env:check",
    "commit:metrics": "node scripts/show-commit-metrics.mjs",
    "ci:metrics": "node scripts/analyze-ci-metrics.mjs",
    "ci:metrics:collect": "node scripts/collect-ci-metrics.mjs",
    "deploy:metrics": "node scripts/deployment-metrics.mjs --report",
    "metrics:all": "npm run ci:metrics && npm run deploy:metrics",
    "metrics:dashboard": "node scripts/metrics-dashboard.mjs",
    "metrics:summary": "node scripts/metrics-summary.mjs",
    "diagnose:git": "node scripts/diagnose-git-issues.mjs",
    "diagnose:ci": "node scripts/diagnose-ci-failures.mjs",
    "diagnose:all": "npm run diagnose:git && npm run diagnose:ci",
    "fix:auto": "npm run format && npm run lint:fix",
    "perf:optimize": "node scripts/performance-optimizer.mjs",
    "perf:report": "node scripts/performance-optimizer.mjs --report",
    "perf:cleanup": "node scripts/performance-optimizer.mjs --cleanup",
    "ci:optimize": "npm run perf:optimize && npm run ci:metrics:collect",
    "security:audit": "node scripts/security-audit.mjs",
    "security:check": "npm run security:audit",
    "security:deps": "npm audit --audit-level moderate",
    "security:secrets": "git ls-files | grep -E '(^|/)\\.env(\\.|$)' && echo 'WARNING: Environment files detected in Git' || echo 'OK: No environment files in Git'",
    "security:all": "npm run security:audit && npm run security:deps",
    "acceptance:test": "node scripts/acceptance-test.mjs",
    "acceptance:run": "node scripts/run-acceptance-tests.mjs",
    "acceptance:report": "node scripts/generate-acceptance-report.mjs",
    "acceptance:full": "npm run acceptance:run && npm run acceptance:report",
    "preview:ensure": "node scripts/ensure-vercel-preview.mjs",
    "preview:diagnose": "node scripts/diagnose-vercel-preview.mjs",
    "preview:get": "node scripts/get-preview-url.mjs",
    "preview:test": "node scripts/test-vercel-preview-workflow.mjs",
    "prepare": "husky || true",
    "skill:validate": "tsx .claude/skills/sanity-ingredient-validator/index.ts",
    "skill:import": "tsx .claude/skills/sanity-bulk-import/index.ts",
    "skill:optimize": "tsx .claude/skills/article-optimizer/index.ts",
    "skill:price": "tsx .claude/skills/price-calculator/index.ts",
    "skill:dev": "tsx .claude/skills/sanity-dev-helper/index.ts",
    "skill:compliance": "tsx .claude/skills/compliance-checker/index.ts",
    "skill:pipeline": "tsx .claude/skills/run-pipeline.ts",
    "skill:list": "tsx .claude/skills/run-pipeline.ts list",
    "skills:install": "cd .claude/skills && npm install",
    "skills:help": "echo 'Available Skills: validate, import, optimize, price, dev, compliance, pipeline'",
    "scores:update": "node scripts/update-scores.mjs",
    "scores:auto": "node scripts/update-scores.mjs"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "husky": "^9.0.0",
    "jsdom": "^27.1.0",
    "lint-staged": "^15.0.0",
    "ora": "^7.0.1",
    "tsx": "^4.7.0"
  },
  "lint-staged": {
    "apps/web/**/*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix --max-warnings 0"
    ],
    "packages/**/*.{js,jsx,ts,tsx}": [
      "prettier --write"
    ],
    "**/*.{json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@lhci/cli": "^0.15.1",
    "@sanity/client": "^7.8.2",
    "@sanity/vision": "^4.3.0",
    "autoprefixer": "^10.4.21",
    "chalk": "^5.6.0",
    "groq": "^4.3.0",
    "next-sitemap": "^4.2.3",
    "postcss": "^8.5.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sanity": "^3.99.0",
    "styled-components": "^6.1.19",
    "zod": "^4.0.17"
  }
}
